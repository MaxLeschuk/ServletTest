<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>ServletTest</display-name>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddVoteServlet</servlet-name>
        <servlet-class>servlets.AddVoteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>VoteListServlet</servlet-name>
        <servlet-class>servlets.VoteListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VoteListServlet</servlet-name>
        <url-pattern>/VoteListServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddVoteServlet</servlet-name>
        <url-pattern>/AddVoteServlet</url-pattern>
    </servlet-mapping>
</web-app>